@model Grocery

<form asp-action="AddGrocery" method="POST">    

<div class="container">    
  <div class="form-row">
    <div class="col-md-6">        
        <input asp-for="Name" class="form-control" placeholder="Add Grocery">    
    </div>
    <div class="col-md-4">        
        <input asp-for="Quantity" class="form-control" placeholder="Quantity">
    </div>
    <div class="col-md-2">
      <button type="submit" class="btn btn-primary">Add</button>
    </div>
  </div>
</div>

</form>