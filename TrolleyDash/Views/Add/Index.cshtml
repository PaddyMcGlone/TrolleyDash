@model AddViewModel
@using Humanizer

@{
    ViewData["Title"] = "Manage your Groceries";
}

<div class="panel panel-default add-panel">
    <div class="panel-heading">@ViewData["Title"]</div>

    <table class="table table-hover">
        <thead>
            <td>&#x2714;</td>
            <td>Grocery</td>
            <td>Due</td>
        </thead>

        @foreach (var item in Model.Groceries)
        {
            <tr>
                <td>
                    <form asp-action="MarkDone" method="POST">
                        <input type="checkbox" class="done-checkbox">
                        <input type="hidden" name="id" value="@item.Id">
                    </form>
                </td>
                <td>@item.GroceryItem</td>
                <td>@item.DueFor.Humanize()</td>                
            </tr>
        }
    </table>

    <div class="panel-footer add-item-form">
        @Html.Partial("AddGroceryPartial", new Grocery())
    </div>
</div>